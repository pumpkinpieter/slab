%matplotlib widget

import ipywidgets as widgets
import numpy as np
# %matplotlib notebook
from matplotlib import pyplot as plt


x = np.linspace(0, 2*np.pi, 1000)


N = 500
def sine_wave(i, N=N):
    # fig, ax = plt.subplots(1)
    y = np.sin(x+2*np.pi * i/N)
    plt.plot(x, y)
    # return fig, ax


widgets.interact(sine_wave, i=(0, N, 1),);



